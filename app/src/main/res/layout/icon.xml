<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="icon"
            type="com.developer.paul.recyclerview.viewModels.IconItemViewModel"/>
        <import type="com.developer.paul.recyclerview.ClosableRecyclerViewUtil"/>
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@{ClosableRecyclerViewUtil.getIconRes(context, icon.name)}"
            />
    </RelativeLayout>

</LinearLayout>
</layout>
